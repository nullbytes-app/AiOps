# Kubernetes Secrets Template
# ============================
#
# IMPORTANT: This is a TEMPLATE FILE (.example)
# NEVER commit the actual secrets.yaml file to git
# Only this template should be version controlled
#
# How to use:
# 1. Copy this file to secrets.yaml (git will ignore it due to .gitignore)
# 2. Encode each secret value using base64
# 3. Replace the PLACEHOLDER values with your actual encoded secrets
# 4. Apply with: kubectl apply -f k8s/secrets.yaml -n ai-agents
# 5. Verify: kubectl get secrets -n ai-agents
#
# To encode a value:
#   echo -n "your-secret-value" | base64
#
# Example (DO NOT USE THESE VALUES):
#   - Database password "mysecurepass" encodes to: bXlzZWN1cmVwYXNz
#   - API key "sk-1234567890" encodes to: c2stMTIzNDU2Nzg5MA==

apiVersion: v1
kind: Secret
metadata:
  name: postgres-credentials
  namespace: ai-agents
  labels:
    app: postgresql
type: Opaque
data:
  # Base64-encoded PostgreSQL username (default: postgres)
  username: cG9zdGdyZXM=
  # Base64-encoded PostgreSQL password - CHANGE THIS
  # Generate: echo -n "your-secure-password" | base64
  password: PLACEHOLDER_BASE64_POSTGRES_PASSWORD

---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: ai-agents
  labels:
    app: ai-agents
type: Opaque
data:
  # PostgreSQL connection string
  # Format: postgresql://username:password@postgresql.ai-agents.svc.cluster.local:5432/ai_agents
  # Example: postgresql://postgres:mysecurepass@postgresql.ai-agents.svc.cluster.local:5432/ai_agents
  # Encode the entire connection string with base64
  database_url: PLACEHOLDER_BASE64_DATABASE_URL

  # Redis connection string
  # Format: redis://redis.ai-agents.svc.cluster.local:6379/0
  # Encode with base64
  redis_url: PLACEHOLDER_BASE64_REDIS_URL

  # OpenAI API Key (for Epic 2 - Enhanced AI Features)
  # Format: sk-xxxxxxxxxxxxx
  # Encode with base64
  # Optional: can be left as placeholder until Epic 2 is implemented
  openai_api_key: PLACEHOLDER_BASE64_OPENAI_API_KEY

---
